<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <WarnOn>3390;$(WarnOn)</WarnOn>
    <RootNamespace>NATS</RootNamespace>
    <PackageId>nats-fs</PackageId>
    <Title>Opinionated F# NATS Client</Title>
    <Authors>Robert Kayman</Authors>
    <Description>F# NATS client to connect to NATS 2+ server</Description>
    <Copyright>Copyright © 2021.  All rights reserved.</Copyright>
    <PackageTags>nats f#</PackageTags>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <Tailcalls>true</Tailcalls>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="nats.fs" />
    <Compile Include="UiProgress.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BenchmarkDotNet" Version="0.13.0" />
    <PackageReference Include="NodaTime" Version="3.0.5" />
    <PackageReference Include="Spectre.Console" Version="0.39.1-preview.0.31" />
    <PackageReference Include="System.Buffers" Version="4.5.1" />
    <PackageReference Include="System.IO.Pipelines" Version="5.0.1" />
    <PackageReference Include="TaskBuilder.fs" Version="2.1.0" />
  </ItemGroup>

</Project>
